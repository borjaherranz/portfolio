---
import { basics } from '@/resources/cv.json';
import Section from '@/components/Section.astro';
const { name, label, image,  profiles, phone, email, location } = basics;
const { city, postalCode, region } = location;
import GitHub from '@/icons/Github.astro';
import LinkedIn from '@/icons/LinkedIn.astro';
import Gmail from '@/icons/Gmail.astro';
import Phone from '@/icons/Phone.astro';

const SOCIAL_ICONS: Record<string, any> = {
    github: GitHub,
    linkedin: LinkedIn
};
---
<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>{city}, {postalCode}, {region}</span>
            <footer>
                {
                    email && (
                        <a
                            href={`mailto: ${email}`}
                            title={`Send an email to ${name}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Gmail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a
                            href={`tel: ${phone}`}
                            title={`Call ${name}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    profiles.map(({ network, url }) => {
                        const Icon = SOCIAL_ICONS[network];
                        return (
                            <a
                                href={url}
                                title={`View ${name}'s ${network} profile`}
                                target="_blank"
                                rel="noopener noreferrer"
                            > 
                                <Icon />
                            </a>
                        )})
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
        flex-direction: row;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    footer {
        margin-top: 5px;
        display: flex;
        gap: 0.6rem;
    }

    footer a {
        border-color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all .3s ease;
    }

    footer a:hover {
        background-color: #eee;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: #444;
        font-size: 1.25rem;
        font-weight: 300;
        text-wrap: balance;
        margin: 0.5rem 0;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 139px;
        border-radius: 16px;
    }

    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: .85rem;
        letter-spacing: -0.05rem;
    }
</style>