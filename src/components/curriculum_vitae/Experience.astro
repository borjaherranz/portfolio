---
import Section from '@/components/Section.astro';
import { work } from '@/resources/cv.json';
---
<Section title="Work Experience">
    <ul>
        {
            work.map(({
                company,
                position,
                startDate,
                endDate,
                summary,
                highlights
            }) => {
                const startYear = new Date(startDate).getFullYear();
                const endYear = endDate ? new Date(endDate).getFullYear() : 'Present';
                const experienceYears = endDate? `${startYear} - ${endYear}` : `${startYear} - ${new Date().getFullYear()}`;
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h2>{company}</h2>
                                    <h3>{position}</h3>
                                </div>
                                <time>{experienceYears}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>   
                        </article>
                    </li>
                )
            })
        }
    </ul> 
</Section>

<style>
    ul {
        display: flex;
        gap: 32px;
        flex-direction: column;
    }

    article h2 {
       font-weight: 500;
       color: #111;
       margin-top: 5%; 
    }

    article h3 {
        margin-top: 5%;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-top: 4px;
    }

    time {
        color: #555;
        font-size: 0.85rem;;
    }
</style>

